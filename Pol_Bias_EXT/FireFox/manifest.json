{

    "manifest_version": 2,
    "name": "Bias Checker",
    "version": "1.0",
  
    "description": "Checks news articles for political bias",
  
    "icons": {
      "48": "icons/border-48.png"
    },
    "applications": {
        "gecko": {
            "id": "borderify@example.com"
        }
    },
    "background": {
      "scripts": ["jquery.js", "biasFetch.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["newsBias.js"]
      }
    ]
    
  }